<div class="body">
	<div class="container">
		<p id="notice"></p>
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>

		<div class="field">
			<label for="user_name">Name</label>
			<%= f.text_field :name, autofocus: true %>
		</div>
		<div class="field">
			<label for="user_image">Image</label>
			<%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		</div>
		<div class="field">
			<label for="user_introduction">Introduction</label>
			<textarea name="user[introduction]" id="user_introduction"></textarea>
		</div>
		<div class="actions">
			<input type="submit" name="commit" value="Update User" data-disable-with="Update User">
		</div>
		<% end %>
	</div>
</div>