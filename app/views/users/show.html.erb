<div class="body">
	<div class="container">
		<p id="notice">Signed in successfully.</p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<div>画像</div>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th>文章</th>
						</tr>
					</tbody>
				</table>
					<div class="row">
						<%= link_to edit_user_path(current_user) do %>
							<div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
						<% end %>
						<!-- <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/100/edit"></a> -->
					</div>


					<h2>New book</h2>

					<%= form_for(@post) do |f| %>

					<div>Title</div>
					<%= f.text_field :title %>

					<div>Opinion</div>
					<%= f.text_area :body %>

					<div>
						<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
						<!-- <%#= f.submit 'Create Book' %> -->
					</div>

					<% end %>

			</div>







				<div class="col-xs-9">
					<h2>Books</h2>
						<table class="table table-hover table-inverse">
							<thead>
								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead>
						  <% @user.bookers.each do |book| %>
							<tbody>
								<tr>
									<td>画像</td>
									<td><%= link_to book.title, booker_path(book) %></td>
									<td><%= book.body %></td>
									<!-- <td>
										<%#= link_to "Show", booker_path(book) %>
									</td>
									<td>
										<%#= link_to "Edit", edit_booker_path(book) %>
									</td>
									<td>
										<%#= link_to "Destroy", booker_path(book), method: :delete %>
									</td> -->
								</tr>
							</tbody>
						  <% end %>
						</table>
					</div>
				</div>
			</div>
		


		
