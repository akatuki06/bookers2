<div class="body">
	<div class="container">
		<p id="notice">Signed in successfully.</p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<div><%= attachment_image_tag @posted.user, :image, :fill, 100, 100, fallback: "images.jpg"%></div>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @posted.user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @posted.user.introduction %></th>
						</tr>
					</tbody>
				</table>
					<div class="row">
						<%= link_to edit_user_path(current_user) do %>
							<!-- <div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div> -->
						<% end %>
						<!-- <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/100/edit"></a> -->
					</div>


					<h2>New book</h2>

					<%= form_for(@post) do |f| %>

					<div>Title</div>
					<%= f.text_field :title, class: 'col-xs-12' %>

					<div>Opinion</div>
					<%= f.text_area :body, class: 'col-xs-12' %>

					<div>
						<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
						<!-- <%#= f.submit 'Create Book' %> -->
					</div>

					<% end %>

			</div>







				<div class="col-xs-9">
					<h2>Book detail</h2>
						<table class="table table-hover table-inverse">
							<!-- <thead>
								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead> -->
							<%# @user.bookers.each do |book| %>
							<tbody>
								<tr>
									<td>
									<%= link_to user_path(@posted.user) do %>
									<%= attachment_image_tag @posted.user, :image, :fill, 100, 100, fallback: "images2.jpg"%><br><%= @posted.user.name %>
									<% end %>
									</td>
									<td><%= @posted.title %></td>
									<td><%= @posted.body %></td>
									<td>
										<% if @posted.user == current_user %>
										<%= link_to 'Edit', edit_booker_path(@posted), class: 'btn-sm btn-success' %>
										<% end %>
										<!-- <div>Edit</div> -->
										<%# end %>
									</td>
									<td>
										<% if @posted.user == current_user %>
										<%= link_to 'Destroy', booker_path(@posted), method: :delete, class: 'btn-sm btn-danger', data: { confirm: '削除しますか？' } %>
										<% end %>
									</td>
								</tr>
							</tbody>
						  <%# end %>
						  
						</table>
				</div>
			</div>
		</div>















