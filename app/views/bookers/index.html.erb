<div class="body">
	<div class="container">
		<p id="notice">Signed in successfully.</p>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<div><%= attachment_image_tag current_user, :image, :fill, 100, 100, fallback: "images.jpg"%></div>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %></th>
						</tr>
					</tbody>
				</table>
					<div class="row">
						<%= link_to edit_user_path(current_user) do %>
							<div class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></div>
						<% end %>
					</div>

					<h2>New book</h2>

					<%= form_for(@post) do |f| %>

						<% if @post.errors.any? %>
						<div id="error_explanation" class="alert alert-danger">
							<ul>
								<% @post.errors.full_messages.each do |message| %>
								<li><%= message %></li>
								<% end %>
							</ul>
						</div>
						<% end %>

						<div>Title</div>
						<%= f.text_field :title, class: 'col-xs-12' %>

						<div>Opinion</div>
						<%= f.text_area :body, class: 'col-xs-12' %>
        				<%= f.submit "Create Book", class: "btn btn-primary col-xs-12s" %>
						<!-- <div class="btn btn-primary col-xs-12">Create Book</div> -->
					<% end %>
			</div>

				<div class="col-xs-9">
					<h2>Books</h2>
						<table class="table table-hover table-inverse">
							<thead>
								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead>
						  <% @posts.each do |book| %>
							<tbody>
								<tr>
									<td>
										<%= link_to booker_path(book) do %>
										<%= attachment_image_tag book.user, :image, :fill, 50, 50, fallback: "images2.jpg"%>
										<% end %>
									</td>
									<td><%= link_to book.title, booker_path(book) %></td>
									<td><%= book.body %></td>
							</tbody>
						  <% end %>
						</table>
				</div>
			</div>
		</div>