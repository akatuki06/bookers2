	<h1>Books</h1>
		<table width="417">
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
					<th colspan="3 width="147"></th>
				</tr>
			</thead>
		  <% @posts.each do |book| %>
			<tbody>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td>
						<%= link_to "Show", booker_path(book) %>
					</td>
					<td>
						<%= link_to "Edit", edit_booker_path(book) %>
					</td>
					<td>
						<%= link_to "Destroy", booker_path(book), method: :delete %>
					</td>
				</tr>
			</tbody>
		  <% end %>
		</table>
	<h2>New book</h2>

	<%= form_for(@post) do |f| %>

		<div>Title</div>
		<%= f.text_field :title %>

		<div>body</div>
		<%= f.text_area :body %>

		<div>
		<%= f.submit 'Create Book' %>
		</div>

	<% end %>